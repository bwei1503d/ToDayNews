<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/iwhite"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp" android:orientation="horizontal">
        <com.example.bwei.todaynews.other.tabview.ColorTrackTabLayout
            android:layout_width="match_parent"
            android:id="@+id/index_tablayout"
            app:tabSelectedTextColor="#FF0000"
            android:background="@color/tablayout_bg"
            android:layout_weight="1"
            android:layout_height="44dp" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/text_add"
            android:layout_width="30dp"
            android:background="#FF0000"
            android:text=" + "
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:id="@+id/text_sub"
            android:layout_width="30dp"
            android:background="#FF0000"
            android:text=" - "
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/index_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>